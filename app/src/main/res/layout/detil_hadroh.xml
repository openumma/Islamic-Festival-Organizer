                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/descHadroh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mana saya tau\niya\nsumpah\ngaboong\naku maunya kamu"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/button_TontonVid"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textColor="#2D2B2B"
                    android:background="#2B2B2B"
                    android:text="Tonton Video"
                    app:backgroundTint="#F0F0F0" />

                <Button
                    android:id="@+id/button_BuatPesanan"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Buat Pesanan"
                    android:textColor="#2D2B2B"
                    android:textStyle="bold"
                    app:backgroundTint="#F0F0F0" />

            </LinearLayout>
            <Button
                android:backgroundTint="#347B36"
                android:text="Hubungi Hadroh"
                android:layout_gravity="center"
                android:id="@+id/btn_hubungi_hadroh"
                android:layout_width="350dp"
                android:layout_height="50dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>